{{#partial "contenidoPagina" }}

<h1>Sus prendas</h1>
<form method="get" action="{{ruta}}/prenda" >
    <button type='submit'>Agregar prenda</button>
</form>
<b>{{ resultado }}</b>
<form name="listadoPrendas" method="get">
    <ul>
        {{#each prendas}}
            <li>
                <ul>
                    <li>{{tipo}}</li>
                    <li>{{categoria}}</li>
                    <li>{{material}}</li>
                    <li>{{colorPrimario}}</li>
                    {{#if colorSecundario}}
                    <li>{{colorSecundario}}</li>
                    {{/if}}
					<img src="{{linkImagen}}">
                </ul>
            </li>
        {{/each}}
    </ul>
</form>

{{/partial}}

{{> navbar.hbs}}
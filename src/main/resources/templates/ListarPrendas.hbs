{{#partial "contenidoPagina" }}

<h1>Sus prendas</h1>
<form method="get" action="{{ruta}}/prenda" >
    <button type='submit'>Agregar prenda</button>
</form>
<b>{{ resultado }}</b>
<form name="listadoPrendas" method="get">
    <ul class="list-group">
        {{#each prendas}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{tipo}}
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{categoria}}
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{material}}
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{colorPrimario}}
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{colorSecundario}}
                    </li>
                </ul>
            </li>
        {{/each}}
    </ul>
</form>

{{/partial}}

{{> navbar.hbs}}